@model Customer
<style>
    span {
        margin-right: 50px;
    }
</style>
<h3 class="text-right p-3">Edit Customer</h3>
<div class="row flex-row-reverse mr-5">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="@Model.CustomerId"/>
            <div class="form-group text-right">
                <label asp-for="FirstName" class="form-check-label font-weight-bold pr-3 pb-2 pb-2">نام </label>
                <input type="text" asp-for="FirstName" class="form-control text-right" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <label asp-for="LastName" class="form-check-label font-weight-bold pr-3 pb-2">نام خانوادگی </label>
                <input type="text" asp-for="LastName" class="form-control text-right" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <label asp-for="Email" class="form-check-label font-weight-bold pr-3 pb-2">ایمیل </label>
                <input type="text" asp-for="Email" class="form-control text-right" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-group text-right">
                <label asp-for="Password" class="form-check-label font-weight-bold pr-3 pb-2">کلمه عبور </label>
                <input type="text" asp-for="Password" class="form-control text-right" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <label asp-for="ConfirmPassword" class="form-check-label font-weight-bold pr-3 pb-2">تکرار کلمه عبور </label>
                <input type="text" asp-for="ConfirmPassword" class="form-control text-right" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <input type="submit" class="btn btn-warning btn-block mt-4" value="Edit" />
        </form>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}